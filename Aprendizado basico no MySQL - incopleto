create database faculdade;

create table pessoas(
nome varchar(30),
idade int,
genero char(1),
peso float,
altura float,
nacionalidade varchar(20)
);

create table professores(
id int not null auto_increment,
nome varchar(30) not null,
nascimento date,
genero enum('M','F'),
peso decimal(5,2),
altura decimal(3,2),
nacionalidade varchar(20) default 'Brasil',
primary key (id)
) default charset = utf8;

drop table pessoas;

create table pessoas(
id int not null auto_increment,
nome varchar(30) not null,
nascimento date,
genero enum('M,F'),
peso decimal (5,2),
altura decimal (3,2),
nacionalidade varchar(20) default 'Brasil',
primary key(id)
)default charset=utf8;

